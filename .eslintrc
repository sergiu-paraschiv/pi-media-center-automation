{
    "rules": {
        "complexity": [2, 6],
        "default-case": 2,
        "guard-for-in": 2,
        "no-floating-decimal": 2,
        "radix": 2,
        "wrap-iife": 2,
        "yoda": [0, "always"],
        "strict": [2, "never"],
        "no-use-before-define": 2,
        "brace-style": [2, "stroustrup"],
        "camelcase": 2,
        "curly": 2,
        "dot-notation": 2,
        "eol-last": 2,
        "filenames/filenames": [2, "^[a-zA-Z0-9.]+$"],
        "func-names": 2,
        "func-style": [2, "declaration"],
        "indent": [2, 4, {"SwitchCase": 1}],
        "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
        "no-lonely-if": 2,
        "no-mixed-spaces-and-tabs": [2, true],
        "no-multiple-empty-lines": 2,
        "no-nested-ternary": 2,
        "no-spaced-func": 2,
        "no-undefined": 2,
        "no-underscore-dangle": 0,
        "quotes": [2, "single"],
        "spaced-comment": [2],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"],
        "react/jsx-uses-react": 1
    },
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true
    },
    "parser": "babel-eslint",
    "plugins": [
        "babel",
        "react",
        "filenames"
    ]
}
